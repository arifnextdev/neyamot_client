# Step 1: Base image
FROM node:18-alpine AS base

# Set working directory inside the container
WORKDIR /app

# Copy root package.json and yarn.lock for installing root dependencies
COPY package.json yarn.lock ./

# Copy Turborepo workspace config files if any (like turbo.json or pnpm-lock.yaml, modify if needed)
COPY turbo.json ./

# Install dependencies only (including workspaces)
RUN yarn install --frozen-lockfile

# Step 2: Build stage
FROM base AS builder

# Copy the entire repo (all files)
COPY . .

# Build only the apps/web app
RUN yarn workspace web build

# Step 3: Production image
FROM node:18-alpine AS runner

WORKDIR /app

ENV NODE_ENV=production

# Copy only necessary files from builder stage for production
COPY --from=builder /app/apps/web/public ./public
COPY --from=builder /app/apps/web/.next ./.next
COPY --from=builder /app/apps/web/package.json ./package.json
COPY --from=builder /app/node_modules ./node_modules

# Expose the port Next.js will run on
EXPOSE 3000

# Start the Next.js app
CMD ["yarn", "workspace", "web", "start"]
